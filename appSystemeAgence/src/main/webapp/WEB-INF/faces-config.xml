<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<!--===================================================================== -->
	<!--========== RESOLVEUR DE VARIABLES JSF EN BEANS SPRING =============== -->
	<!--===================================================================== -->
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>


	<!-- Définition des règles de navigation (cf. projet 04_navigation). -->
	<navigation-rule>
		<from-view-id>/identificationConseiller.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>validationIdentificationConseiller</from-outcome>
			<to-view-id>/accueil.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/accueil.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>versFormulaireAjoutConseiller</from-outcome>
			<to-view-id>/addConseiller.xhtml?faces-redirect=true</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/addConseiller.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>validationAjoutConseiller</from-outcome>
			<to-view-id>/accueil.xhtml?faces-redirect=true</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Redirection du tableau de bord vers la page d'affichage des propriétaires. -->
	<navigation-rule>
		<from-view-id>tableauBord.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>versListeProprietaires</from-outcome>
			<to-view-id>/listeProprietaires.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Redirection de la page d'affichage des propriétaires vers la page d'ajout 
		d'un propriétaire. -->
	<navigation-rule>
		<from-view-id>listeProprietaires.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>versFormulaireAjoutProprietaire</from-outcome>
			<to-view-id>/addProprietaire.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

		<!-- Redirection de la page d'identification du conseiller vers son tableau de bord. -->
	<navigation-rule>
		<from-view-id>identification.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dIdentidicationATableauDeBord</from-outcome>
			<to-view-id>/tableauBord.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>